{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "moduleResolution": "nodenext",
        "jsx": "preserve",
        "resolveJsonModule": true,
        "emitDeclarationOnly": true,
        "paths": {
            "@": ["./src"],
            "@/*": ["./src/*"],
            "~": ["./"],
            "~/*": ["./*"]
        },
        "types": []
    },
    "include": [
        "src",
        "./global.d.ts",
        "./src/**/*.ts",
        "./src/**/*.vue",
        "./node_modules/@inertiajs/vue3"
    ],
    "exclude": ["**/dist", "**/node_modules"]
}
